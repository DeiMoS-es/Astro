---
import NextJS from "../icons/NextJS.astro"
import Tailwind from "../icons/Taildwind.astro"

const TAGS = {
  NEXT: {
    name: "Next.js",
    class: "bg-black text-white",
    icon: NextJS,
  },
  TAILWIND: {
    name: "Tailwind CSS",
    class: "bg-[#003159] text-white",
    icon: Tailwind,
  },
}
const PROJECTS = [
    {
        title: 'Project 1',
        description: 'Lorenm ipsum dolor sit amet non proident in rep noise e ris pos tempor invid ',
        link: '#',
        github: '#',
        image: 'https://via.placeholder.com/300x200' ,
        tags: [TAGS.NEXT, TAGS.TAILWIND],
    }
]
---
{
    PROJECTS.map(({image, title, description, tags}) => (
        <article>
            <h3 class="text-2xl font-semibold text-yellow-200 mb-2">{title}</h3>
            <p class="text-lg mb-4 text-pretty">{description}</p>
            <ul class="flex gap-x-2 flex-row mb-2">
                {tags.map((tag) => (
                    <li>
                        <span class={`flex gap-x-2 rounded-full text-xs ${tag.class} py-1 px-2`}>
                            <tag.icon class="size-6" />
                            {tag.name}
                        </span>
                    </li>
                ))}
            </ul>
            <img class="rounded shadow-2xl shadow-white/20" src={image} alt={`Captura de pantalla del proyecto ${image}`}>
        </article>
    ))
}