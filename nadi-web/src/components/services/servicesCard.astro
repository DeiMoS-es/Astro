---
import { Image } from 'astro:assets';

interface Props {
  title: string;
  description: string;
  image: any; // object from astro:content image(), manteniendo flexibilidad
  icon?: string;
}

const { title, description, image: imagePath, icon } = Astro.props as Props;

---

<div class="card">
  <Image src={imagePath} alt={`${title} — ${description.slice(0, 100)}`} width={280} sizes="(max-width: 768px) 100vw, 280px" />
  <div class="info">
    <h3>{title} {icon && <span>{icon}</span>}</h3>
    <p>{description}</p>
  </div>
</div>

<style>
  .card {
    width: 100%;
    max-width: 880px;
    display: flex;
    flex-direction: row-reverse; /* imagen a la derecha en escritorio (fila invertida) */
    gap: 0;
    border: 1px solid #ddd;
    border-radius: 8px;
    overflow: hidden;
    background-color: rgba(138, 43, 226, 0.06);
    color: #111;
    align-items: stretch;
  }
  .card img {
    width: 280px;
    padding: 0;
    height: auto;
    object-fit: cover;
  }
  .info { padding: 1rem; }
  .info h3 { color: #020202; margin: 0 0 0.5rem 0; }
  .info p { margin: 0; color: #111; }

  @media (max-width: 768px) {
    .card {
      flex-direction: column; /* columna en móvil */
      max-width: 100%;
    }
    .card img { width: 100%; height: 220px; object-fit: cover; }
    .info { padding: 0.75rem; }
  }
</style>