import data from "../json/sobre_mi.json";

const sobreMi = data.filter(item => item.grupo.toLowerCase() === "datos personales");
// Extraer los valores de nombre, apellido y edad
const nombre = sobreMi.find(item => item.clave.toLowerCase() === "nombre")?.valor || "";
const apellido = sobreMi.find(item => item.clave.toLowerCase() === "apellido")?.valor || "";
const edad = sobreMi.find(item => item.clave.toLowerCase() === "edad")?.valor || "";

const formacion = data.filter(item => item.grupo.toLowerCase() === "formación académica");
const experiencia = data.filter(item => item.grupo.toLowerCase() === "experiencia laboral");

